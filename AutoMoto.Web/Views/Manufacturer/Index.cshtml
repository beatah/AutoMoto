@using AutoMoto.Contracts
@model IEnumerable<AutoMoto.Contracts.ViewModels.ManufacturerViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista Marek</h1>
    </div>

</div>   

<div class="row">
    <div class="col-lg-6">
        <a href="@Url.Action("Create","Manufacturer")" class="btn btn-primary">
            <i class="fa fa-plus"></i> Dodaj
        </a>
        </div>
        <div class="col-lg-8">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nazwa</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var manufacturer in Model)
                        {
                            <tr>
                                <td>@manufacturer.Name</td>
                                <td>@manufacturer.IsActive.GetDisplayForStatus()</td>
                                <td><a href="@Url.Action("Edit", "Manufacturer", new {id = manufacturer.Id})" class="btn btn-warning">
                                    <span class="fa fa-edit"></span> Zmień status
                                </a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

