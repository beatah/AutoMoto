@model AutoMoto.Contracts.ViewModels.ListingItemModel
<div class="card">
    <div class="card-image">
        <a href="@Url.Action("Details", "Advertisement", new { id = Model.ListingCurrent.Id })">
            <img alt="@Model.ListingCurrent.Title" src="@Model.UrlPicture">

            <span class="card-img-label">@Html.DisplayFor(x => Model.ListingCurrent.Car.Price) zł</span>

        </a>
    </div>
    <div class="card-content">
        <a href="@Url.Action("Details", "Advertisement", new { id = Model.ListingCurrent.Id })">
            <h5 class="card-title">@Model.ListingCurrent.Title</h5>
            <p class="truncate">
                @Html.Raw(Model.ListingCurrent.Description)
            </p>
            <p>

            </p>
        </a>
    </div>
    <div class="card-action">
        <a href="@Url.Action("Details", "Advertisement", new { id = Model.ListingCurrent.Id})"><i class="glyphicon glyphicon-map-marker"></i> @Model.ListingCurrent.User.Address.City</a>
    </div>
</div>